<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ../partials/includecss.ejs %>
</head>
<body>
<div id="wrapper">
    <!-- start header -->
    <%- include ../partials/header.ejs %>
    <section id="content">
        <div class="container" >
            <div class="row">
                <form method="POST" action="./" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" id="title" placeholder="Title" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" id="name" placeholder="Your name" data-rule="required" data-msg="Please enter a valid name" />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <textarea type="text" class="form-control" name="contents" rows="5" id="contents" placeholder="Contents" data-rule="required" data-msg="Please write your affiliation" ></textarea>
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <span class="btn btn-theme fileinput-button">
                            <i class="glyphicon glyphicon-plus"></i>
                            <span>Add files...</span>
                            <input type="file" name="upload-files" >
                        </span>
                    </div>
                    <div class="text-center"><button type="submit" class="btn btn-default pull-right">Upload</button></div>
                </form>
            </div>
        </div>
    </section>
    <%- include ../partials/footer.ejs %>
</div>
<a href="#" class="scrollup"><i class="fa fa-angle-up active"></i></a>
<!-- javascript
    ================================================== -->
<!-- Placed at the end of the document so the pages load faster -->

<%- include ../partials/includejs.ejs%>
</body>
</html>
